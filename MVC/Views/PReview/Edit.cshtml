@model MVC.Models.TaskReview

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:black; font-family:Cambria">Edit</h1>

<h4>TaskReview</h4>
<hr />
<div class="row" style="background-color:aliceblue">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReviewId" class="control-label" style="color:black ; font-weight:500"></label>
                <input asp-for="ReviewId" class="form-control" style="color:black ; font-weight:400" />
                <span asp-validation-for="ReviewId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label" style="color:black ; font-weight:500"></label>
                <input type="number" min="1" max="5" asp-for="Rating" class="form-control" style="color:black ; font-weight:400" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label" style="color:black ; font-weight:500"></label>
                <input asp-for="Comment" class="form-control" style="color:black ; font-weight:400" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoId" class="control-label" style="color:black ; font-weight:500"></label>
                <input asp-for="ToDoId" class="form-control" style="color:black ; font-weight:400" />
                <span asp-validation-for="ToDoId" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:black ; font-weight:500">
                <input type="submit" value="Update Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="color:black ; font-weight:500">
    <a asp-action="GetReviewList">Back to Review List </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
